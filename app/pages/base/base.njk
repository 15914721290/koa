<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="applicable-device" content="pc,mobile">
    <link rel="shortcut icon" href="/favicon.ico"/>
    <link rel="bookmark" href="/favicon.ico"/>
    <title>{%- block title -%}{%- endblock -%}</title>
    <meta name="keywords" content="{%- block keywords -%}{%- endblock -%}">
    <meta name="description" content="{%- block description -%}{%- endblock -%}">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">
    <style type="text/css">
      {%- include "./base.css" -%}
      {%- block extraCss -%}{%- endblock -%}
    </style>
    {%- block extraHead -%}{%- endblock -%}
    <!--[if lt IE 9]>
      <script src="/js/ie8.js"></script>
    <![endif]-->
  </head>
  <body ontouchstart>
    {% include "../components/pc_head/pc_head.njk" %}
    {% include "../components/m_head/m_head.njk" %}
    <div class="content">
      {% include "../components/main_nav/main_nav.njk" %}
      {% block content %}{% endblock %}
      {% include "../components/yqlj/yqlj.njk" %}
    </div>
    {% include "../components/footer/footer.njk" %}
    <script src="https://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
    {# <script src="https://apps.bdimg.com/libs/jquery-lazyload/1.9.5/jquery.lazyload.min.js"></script> #}
    {%- block extraBody -%}{%- endblock -%}
    <script>
      $(function() {
        {% include "./base.in.wp.js" %}
        {%- block inlineJs -%}{%- endblock -%}
      })
    </script>
    <script async="async" src="/js/hr.js"></script>
    {% if statistics %}
      {# 百度统计 #}
      <script>
        var _hmt = _hmt || [];
        (function() {
        var hm = document.createElement("script");
        hm.src = "https://hm.baidu.com/hm.js?9f258d4d26e08a933e9a73edee4c4520";
        var s = document.getElementsByTagName("script")[0];
        s.parentNode.insertBefore(hm, s);
        })();
      </script>
    {% endif %}
  </body>
</html>