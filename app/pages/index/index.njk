        <li><a href="{{ wwwOrigin + '/p2p-dh/?letter=Z' }}">Z</a></li>
      </ul>
      <ul class="wdpt clearfix">
        {% for item in recommend %}
          <li>
            <a href="{{ item.url }}">
              <div class="m-hidden">
                <img onerror="this.src='/image/default.png'" src="{{ item.img }}" alt="{{ item.name }}" />
              </div>
              <div>{{ item.name }}</div>
              <div>预期年化 <span>{{ item.rate }}%</span></div>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>

    <div class="pc-block-3-1">
      <div class="pc-block m-block">
        <div class="plate-head clearfix">
          <h3>行业新闻</h3>
          <a class="more" href="{{ hyxw.more }}">更多新闻 &gt;</a>
        </div>
        <ul class="img-link-list">
          {% for item in hyxw.items %}
            <li>
              <div class="clearfix">
                <a href="{{ item.href }}"><img onerror="this.src='/image/default.png'" src="{{ item.img }}" alt="{{ item.text }}" /></a>
                <a href="{{ item.href }}">{{ item.text }}</a>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>

      <div class="pc-block m-block">
        <div class="plate-head clearfix">
          <h3>平台百科</h3>
          <a class="more" href="{{ ptbk.more }}">更多百科 &gt;</a>
        </div>
        <ul class="link-list">
          {% for item in ptbk.items %}
            <li><a href="{{ item.href }}" title="{{ item.inner }}">{{ item.inner }}</a></li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>

  <div class="arena pc-block m-hidden ad1_3">
    {% for item in ads.ad1_3 %}
      {% if item.href %}<a href="{{ item.href }}"{% if item.external %} rel="nofollow"{% endif %}>{% endif %}
        <img onerror="this.src='/image/default.png'" src="{{ item.img }}" />
      {% if item.href %}</a>{% endif %}
    {% endfor %}
  </div>

  {% include "../components/rank_3type/rank_3type.njk" %}

  <div class="arena pc-block m-hidden ad1_5">
    {% for item in ads.ad1_5 %}
      {% if item.href %}<a href="{{ item.href }}"{% if item.external %} rel="nofollow"{% endif %}>{% endif %}
        <img onerror="this.src='/image/default.png'" src="{{ item.img }}" />
      {% if item.href %}</a>{% endif %}
    {% endfor %}
  </div>
{% endblock %}

