{# 平台详情 - 专家深度测评 #}
<div id="zjsdcp" class="pc-block m-block zjsdcp platform-common">
  <div class="plate-head clearfix">
    <h2>专家深度测评</h2>
    {% if zjsdcp.test_time !=='' and zjsdcp.test_sim_info !== '' %}
    <span class="more">测评日期:{{ zjsdcp.test_time }}</span>
    {% endif %}
  </div>
  {% if zjsdcp.test_sim_info !=='' %}
  <div class="title"><span>{{ zjsdcp.test_title }}</span></div>
  <div class="article">
    <div class="elli-3">
      {{ zjsdcp.test_sim_info | safe }}
    </div>
  </div>
  <div>
    <a href="{{zjsdcp.full_article_url}}" class="end-btn">
      查看测评全文
    </a>
  </div>
  {% else %}
  <div class="no-article">
    暂无测评
  </div>
  <div>
    <a href="#" class="noarticle-btn popup-img">
      申请深度测评
    </a>
  </div>
  {% endif %}
</div>